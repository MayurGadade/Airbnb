<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Edit this listing</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" class="form-control" required value="<%= listing.title %>">
                    <div class="invalid-feedback">Please Enter valid title.</div>

                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" class="form-control" required
                        name="listing[description]"><%= listing.description %> </textarea>
                    <div class="invalid-feedback">Please Enter valid description.</div>
                    <div class="mb-3">
                        <img src="<%= relpaceImageUrl %>" alt="">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input type="file" class="form-control" name="listing[image]" value="">
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" class="form-control" required name="listing[price]"
                                value="<%= listing.price %>">
                            <div class="invalid-feedback">Price should be valid.</div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" class="form-control" required name="listing[country]"
                                value="<%= listing.country %>">
                            <div class="invalid-feedback">Country should be valid.</div>

                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" required name="listing[location]"
                        value="<%= listing.location %>">
                    <div class="invalid-feedback">Location should be valid.</div>

                </div>
                <button class="btn add-btn mt-3">Edit</button>
            </form>
        </div>
    </div>