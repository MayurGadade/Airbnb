<Style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    .filter {
        margin-top: 1rem;
        margin-right: 2rem;
        text-align: center;
        opacity: 0.7;
    }

    .filter p {
        font-size: 0.8rem;
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }

    .tex-info {
        display: none;
    }

    #texesSwitech {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3rem;
        padding: 1rem;
        display: flex;
        align-items: center;
        margin-left: 3rem;
    }
</Style>
<% layout("/layouts/boilerplate") %>

    <div id="filters">
        <div class="filter">
            <div>
                <i class="fa-solid fa-fire"></i>
            </div>
            <p>
                Tranding
            </p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-umbrella-beach"></i>
            </div>
            <p>
                Tranding
            </p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-mountain-sun"></i>
            </div>
            <p>
                Mountain
            </p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-person-swimming"></i>
            </div>
            <p>
                Pool
            </p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-brands fa-fort-awesome"></i>
            </div>
            <p>
                Fort
            </p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-bed"></i>
            </div>
            <p>
                Bed
            </p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-tree-city"></i>
            </div>
            <p>
                Top City
            </p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-campground"></i>
            </div>
            <p>
                Camping
            </p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-regular fa-snowflake"></i>
            </div>
            <p>
                Arctic
            </p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-key"></i>
            </div>
            <p>
                New
            </p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-dice"></i>
            </div>
            <p>
                Play
            </p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-ship"></i>
            </div>
            <p>
                Houseboat
            </p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-kitchen-set"></i>
            </div>
            <p>
                Chef's kitchens
            </p>
        </div>
        <div id="texesSwitech">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Total before texes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %> " class="card-link">
                <div class="card listing-card col">
                    <img src="<%= listing.url.image_url %>" class="card-img-top" style="height: 20rem;"
                        alt="listing_image">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %><br>
                            </b>
                            &#8377;<%= listing.price.toLocaleString("en-IN") %> /night
                                &nbsp;&nbsp;&nbsp;<i class="tex-info"> +18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>


    <script>
        let togalSwitech = document.getElementById("texesSwitech");
        togalSwitech.addEventListener("click", () => {
            let texInfo = document.getElementsByClassName("tex-info");
            for (info of texInfo) {
                if (info.style.display != "inline") {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }
            }
        })
    </script>